{
  "name": "@relaycorp/relaynet-core",
  "version": "1.0.3",
  "author": {
    "email": "no-reply@relaycorp.tech",
    "name": "Relaycorp, Inc.",
    "url": "https://relaycorp.tech/"
  },
  "description": "Relaynet core library",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "repository": "https://github.com/relaycorp/relaynet-core-js",
  "homepage": "https://docs.relaycorp.tech/relaynet-core-js/",
  "license": "MIT",
  "keywords": [
    "awala"
  ],
  "scripts": {
    "build": "run-s clean tsc",
    "tsc": "tsc -p tsconfig.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:tslint": "tslint --fix --project .",
    "test": "jest --coverage",
    "static-checks": "run-p static-checks:*",
    "static-checks:lint": "tslint --project .",
    "static-checks:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test:integration": "jest --config src/integration_tests/jest.config.js",
    "doc-api": "typedoc src/index.ts --out build/docs",
    "clean": "del-cli build test"
  },
  "engines": {
    "node": ">=12"
  },
  "dependencies": {
    "@peculiar/asn1-schema": "^2.3.8",
    "@peculiar/asn1-x509": "^2.3.8",
    "@peculiar/webcrypto": "< 2",
    "@stablelib/aes-kw": "^1.0.1",
    "@types/verror": "^1.10.9",
    "asn1js": "^3.0.5",
    "buffer-to-arraybuffer": "0.0.6",
    "date-fns": "^2.30.0",
    "dohdec": "^3.1.0",
    "is-valid-domain": "^0.1.6",
    "moment": "^2.29.4",
    "pkijs": "^3.0.15",
    "smart-buffer": "^4.2.0",
    "uuid4": "^2.0.3",
    "verror": "^1.10.1",
    "webcrypto-core": "< 2"
  },
  "peerDependencies": {
    "@peculiar/webcrypto": "< 2",
    "webcrypto-core": "< 2"
  },
  "devDependencies": {
    "@relaycorp/shared-config": "^1.14.1",
    "@types/jest": "^27.5.0",
    "@types/node": "^20.8.10",
    "del-cli": "^5.1.0",
    "jest": "^27.5.1",
    "jest-date-mock": "^1.0.8",
    "jest-extended": "^4.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.1",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "typedoc": "^0.25.3",
    "typescript": "^4.9.5"
  },
  "prettier": "@relaycorp/shared-config/.prettierrc.json",
  "publishConfig": {
    "access": "public"
  }
}
